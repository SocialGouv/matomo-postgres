{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2015",
    "types": [
      "node",
      "jest"
    ],
    "strict": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
